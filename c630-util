export MAIN_DIALOG

case $1 in
	-d | --dump) echo "$MAIN_DIALOG" ;;
	*) $GTKDIALOG --program=MAIN_DIALOG ; rm /tmp/interconnect_graph.svg 2> /dev/null ; rm /tmp/boost-status 2> /dev/null ;;
