            <hbox>
		    <button>
		    <label>stop</label>
		    <action>echo stop > /sys/class/remoteproc/$PLIST1/state</action>
		    <action>$RPROCSH</action>
		    <action>$(echo $RPROCSH)</action>
		    <action>sleep 3</action>
		    <action>$(echo $RPROCSH)</action>
